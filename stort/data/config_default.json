{
    "project": "example",
    "amp": false,
    "batch_size": 8,
    "loader_workers": 4,
    "max_epochs": 100,
    "model": {
        "class_name": "models.ExampleModel",
        "params": {}
    },
    "losses": {
        "L1": {
            "weight": 1.0,
            "class_name": "torch.nn.L1Loss"
        }
    },
    "metrics": {
        "PSNR": {
            "class_name": "ignite.metrics.PSNR",
            "params": {"data_range": 1.0}
        }
    },
    "datasets": {
        "train": {
            "class_name": "datasets.ExampleDataset",
            "params": {}
        },
        "val": {
            "class_name": "datasets.ExampleDataset",
            "params": {}
        }
    },
    "lr_scheduler": {
        "type": "cosine",
        "start_value": 1e-4,
        "end_value": 1e-7,
        "warmup_steps": 100
    }
}
