{
    "amp": true,
    "batch_size": 32,
    "loader_workers": 4,
    "max_epochs": 32,
    "model": {
        "class": "models.example.ExampleModel",
        "params": {
            "scale_factor": 2,
            "in_channels": 3,
            "out_channels": 3,
            "hidden_channels": 32,
            "num_layers": 4,
            "norm_groups": 4
        }
    },
    "losses": [
        {
            "name": "L1",
            "weight": 1.0,
            "class": "torch.nn.L1Loss"
        }
    ],
    "datasets": {
        "train": {
            "class": "datasets.example.ExampleDataset",
            "params": {
                "split": "train",
                "do_normalize": true,
                "do_augment": true
            }
        },
        "val": {
            "class": "datasets.example.ExampleDataset",
            "params": {
                "split": "val",
                "do_normalize": true,
                "do_augment": false
            }
        },
        "test": {
            "class": "datasets.example.ExampleDataset",
            "params": {
                "split": "test",
                "do_normalize": true,
                "do_augment": false
            }
        }
    },
    "optimizer": {
        "class": "torch.optim.Adam",
        "params": {
            "lr": 1e-4
        }
    },
    "lr_scheduler": {
        "type": "cosine",
        "start_value": 1e-4,
        "end_value": 1e-7,
        "warmup_steps": 100
    }
}
