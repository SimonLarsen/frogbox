{
    "type": "supervised",
    "project": "frogbox-example",
    "batch_size": 32,
    "loader_workers": 4,
    "max_epochs": 16,
    "log_interval": "epoch_completed",
    "checkpoints": [
        {"metric": "SSIM", "mode": "max", "num_saved": 1}
    ],
    "model": {
        "class_name": "models.upscaler.Upscaler",
        "params": {
            "scale_factor": 2,
            "in_channels": 3,
            "out_channels": 3,
            "hidden_channels": 32,
            "num_layers": 4,
            "norm_groups": 4
        },
        "optimizers": {
            "default": {
                "class_name": "torch.optim.AdamW",
                "params": {"lr": 1e-4},
                "scheduler": {
                    "type": "cosine",
                    "end_value": 1e-7
                }
            }
        }
    },
    "losses": {
        "L1": {
            "weight": 1.0,
            "class_name": "torch.nn.L1Loss"
        }
    },
    "datasets": {
        "train": {
            "class_name": "datasets.example.ExampleDataset",
            "params": {"split": "train", "do_augment": true}
        },
        "val": {
            "class_name": "datasets.example.ExampleDataset",
            "params": {"split": "val", "do_augment": false}
        },
        "test": {
            "class_name": "datasets.example.ExampleDataset",
            "params": {"split": "test", "do_augment": false}
        }
    },
    "metrics": {
        "SSIM": {
            "class_name": "torchmetrics.image.StructuralSimilarityIndexMeasure",
            "params": {"data_range": 1.0}
        },
        "PSNR": {
            "class_name": "torchmetrics.image.PeakSignalNoiseRatio",
            "params": {"data_range": 1.0}
        }
    }
}
