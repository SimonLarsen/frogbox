{
    "project": "example-project",
    "amp": true,
    "batch_size": 32,
    "loader_workers": 4,
    "max_epochs": 32,
    "checkpoint_metric": "PSNR",
    "log_interval": {
        "event": "EPOCH_COMPLETED",
        "every": 1
    },
    "model": {
        "class": "models.example.ExampleModel",
        "params": {
            "scale_factor": 2,
            "in_channels": 3,
            "out_channels": 3,
            "hidden_channels": 32,
            "num_layers": 4,
            "norm_groups": 4
        }
    },
    "losses": {
        "L1": {
            "weight": 1.0,
            "class": "torch.nn.L1Loss"
        },
        "MSE": {
            "weight": 1.0,
            "class": "torch.nn.MSELoss"
        }
    },
    "metrics": {
        "PSNR": {
            "class": "ignite.metrics.SSIM",
            "params": {"data_range": 1.0}
        },
        "SSIM": {
            "class": "ignite.metrics.PSNR",
            "params": {"data_range": 1.0}
        }
    },
    "datasets": {% include 'datasets.json' %},
    "optimizer": {
        "class": "torch.optim.Adam",
        "params": {
            "lr": 1e-4
        }
    },
    "lr_scheduler": {
        "type": "cosine",
        "start_value": 1e-4,
        "end_value": 1e-7,
        "warmup_steps": 100
    }
}
